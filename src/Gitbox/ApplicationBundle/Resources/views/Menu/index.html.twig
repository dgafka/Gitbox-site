{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Menu list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idcategory</th>
                <th>Parent</th>
                <th>Title</th>
                <th>Status</th>
                <th>Sort</th>
                <th>Expire</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('menu_show', { 'id': entity.id }) }}">{{ entity.idCategory }}</a></td>
                <td>{{ entity.parent }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.sort }}</td>
                <td>{% if entity.expire %}{{ entity.expire|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('menu_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('menu_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('menu_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
