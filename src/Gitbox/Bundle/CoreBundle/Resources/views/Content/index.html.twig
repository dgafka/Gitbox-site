{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Content list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Status</th>
                <th>Title</th>
                <th>Header</th>
                <th>Description</th>
                <th>Createdate</th>
                <th>Hit</th>
                <th>Expire</th>
                <th>Lastmodificationdate</th>
                <th>Rate</th>
                <th>Type</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('content_show', { 'id': entity.id }) }}">{{ entity.idUser }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.header }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.hit }}</td>
                <td>{% if entity.expire %}{{ entity.expire|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastModificationDate %}{{ entity.lastModificationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.rate }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('content_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('content_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('content_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
