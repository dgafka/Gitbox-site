<div class="row">
    {% for result in results %}
    <div class="col-lg-4">
        <a href="{{ path('user_profile_index', {'login' : result.login }) }}"><h2 class="main-title-show">{{ result.title | raw }}</h2></a>
        <p class="main-description-show">{{ result.description | raw }}</p>
        <p class="main-login-show"><a href="{{ path('user_profile_index', {'login' : result.login }) }}">{{ result.login }}</a></p>
        <a class="btn btn-default" href="{{ path('user_show_post', {'login': result.login, 'id': result.id }) }}">Czytaj...</a>
    </div>
    {% endfor %}
</div>