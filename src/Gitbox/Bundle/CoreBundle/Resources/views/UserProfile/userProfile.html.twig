{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} | Profil użytkownika `{{ user.login }}`{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}" />
{% endblock %}

{% block content_inner %}
    <div class="row well box">
        <div class="col-md-2">
            <ul class="nav nav-pills nav-stacked well">
                <li class="{% if(app.request.attributes.get('_route') == 'user_profile_index') %} active {% endif %}"><a href="{{ path('user_profile_index', {'login' : user.login}) }}"><i class="fa fa-user"></i> Profil</a></li>
                <li class="{% if(app.request.attributes.get('_route') == 'user_profile_modules') %} active {% endif %}"><a href="{{ path('user_profile_modules', {'login' : user.login}) }}"><i class="fa fa-home"></i> Moduły</a></li>
                <li class="{% if(app.request.attributes.get('_route') == 'user_profile_about') %} active {% endif %}"><a href="{{ path('user_profile_about', {'login' : user.login}) }}"><i class="fa fa-adn"></i> O mnie</a></li>
                <li class="{% if(app.request.attributes.get('_route') == 'user_profile_search') %} active {% endif %}"><a href="{{ path('user_profile_search', {'login' : user.login}) }}"><i class="glyphicon glyphicon-search"></i> Wyszukaj</a></li>
            </ul>
        </div>
        <div class="col-md-10">
            <div class="avatar-box">
                <img class="pic img-circle" src="{{ user.email | getGravatarImage(160)}}" alt="avatar">
                <div class="name">{{ user.login }}</div>
            </div>


            <div class="tab-content">
                {% block profileContent %}
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}