{% extends "::base.html.twig" %}

{% block title %}Register{% endblock %}

{% block content_inner %}
    <div class="register">
    {{ form_start(form) }}
        {{ form_errors(form) }}
        
        <h1>Rejestracja</h1>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}

            {{ form_label(form.login) }}
            {{ form_widget(form.login) }}

            {{ form_widget(form.password) }}
        </div>


    {{ form_end(form) }}
    </div>
{% endblock %}

