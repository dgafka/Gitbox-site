{% block user_menu_items %}
    <ul class="nav navbar-nav navbar-right">
        {# Before login #}
        <li class="{% if app.request.attributes.get('_route') == 'gitbox_core_useraccount_register' %}active{% endif %}"><a href="{{ path('gitbox_core_useraccount_register') }}"><b class="glyphicon glyphicon-fire"></b>Zarejestruj się</a></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="glyphicon glyphicon-user" style="font-size: 14pt;"></b> Zaloguj się</a>
            <div class="dropdown-menu login-dropdown">
                <form method="post">
                    <div class="form-group" style="margin-bottom: 10px; width: 200px;">
                        <input id="user_login" class="form-control" type="text" name="user[username]" placeholder="Login" size="30" required/>
                    </div>
                    <div class="form-group">
                        <div class="input-group" style="margin-bottom: 10px; width: 200px;">
                            <input id="user_password" class="form-control password-input" type="password" name="user[password]" placeholder="Hasło" size="30" required/>
                        <span class="input-group-btn">
                            <button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
                        </span>
                        </div>
                    </div>
                    <div class="form-group" style="float: left; margin-bottom: 10px;">
                        <input id="user_remember" style="margin-right: 5px;" type="checkbox" name="user[remember]" value="1" />
                        <label class="string optional" for="user_remember"> Zapamiętaj</label>
                    </div>
                    <input class="btn btn-primary" style="clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 10px;" type="submit" name="commit" value="Zaloguj" />
                    <p><a href="#">Zapomniałeś hasła?</a></p>
                </form>
            </div>
        </li>
    </ul>
{% endblock %}
